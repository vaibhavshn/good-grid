{
	"workspaces": [
		"package",
		"example"
	],
	"scripts": {
		"format": "prettier --plugin-search-dir=. -w ."
	},
	"prettier": {
		"singleQuote": true,
		"semi": false,
		"printWidth": 100,
		"useTabs": true,
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13"
	}
}
